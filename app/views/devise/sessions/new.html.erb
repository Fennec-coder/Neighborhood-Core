<div class="form center">
  <h1>ðŸ˜ƒ<br>Nice to see you again!</h1><br>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>

    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field", placeholder: "e-mail" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input-field", placeholder: "password" %>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <br><%= f.submit "Log in", class: "button" %>
    </div>

  <% end %>
  <%= render "devise/shared/links" %>
</div>
