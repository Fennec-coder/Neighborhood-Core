<div class="form center">
  <h1>ðŸ¤”<br>Forgot your password?</h1>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form" }) do |f| %>

    <div>
      <%= resource.errors[:email].join(",") %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field", placeholder: "e-mail" %>
    </div>

    <br>
    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>